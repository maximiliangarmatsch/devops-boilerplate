{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "env": {
    "es6": true
  },
  "rules": {
    "no-var": "error",
    "semi": ["error", "always"],
    "no-console": "error"
  }
}
