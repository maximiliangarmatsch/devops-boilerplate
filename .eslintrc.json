{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "allowImportExportEverywhere": true,

    "requireConfigFile": false
  },

  "env": {
    "es6": true
  },
  "rules": {
    "no-var": "error",
    "semi": ["error", "always"],
    "no-console": "error"
  }
}
